<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageProfile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_home"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/topLayout"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="right|center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageButton
                android:layout_marginRight="9dp"
                android:background="@color/manlabGreen"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bell_svg"/>
            <ImageButton
                android:background="@color/manlabGreen"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/todayText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/topLayout"
            android:textColor="@color/white"
            android:text="김민호님"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintStart_toStartOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@+id/todayText"
            android:textColor="@color/white"
            android:text="반갑습니다!"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="로그아웃"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <TextView
            android:text="회원탈퇴"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

    </LinearLayout>


</LinearLayout>