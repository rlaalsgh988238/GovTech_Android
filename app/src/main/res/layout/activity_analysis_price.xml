<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageAnalysisPrice.UILayer.AnalysisPriceActivity">
    <ImageView
        android:id="@+id/plantImage"
        android:scaleType="centerCrop"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/apple_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="데이터 분석"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:background="@drawable/top_round_box"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/plantName"
                android:textStyle="bold"
                android:text="사과"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text=" 1kg"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/plantName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageButton
                android:background="@android:color/transparent"
                android:src="@drawable/heart"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:src="@drawable/green_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_manlabgreen_box"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:textSize="17dp"
                android:gravity="center"
                android:text="현재가"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/currentPrice"
                android:text="3000원"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/priceGapText"
                android:textSize="12dp"
                android:textColor="@color/textGray"
                android:text="어제보다 30원 하락하였습니다."
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginHorizontal="30dp"
            android:text="주요 가격 변동 요인"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_manlabgreen_box"
            android:layout_marginHorizontal="30dp"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/icon1"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/dollar"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="12dp"
                android:id="@+id/reason1"
                android:text="국제유가상승"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/textGray"
                android:text="국제유가의 상승으로 운송비가 증가할 것으로 예상됨"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/reason1"
                app:layout_constraintStart_toEndOf="@id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/round_manlabgreen_box"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/icon2"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/snow"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="12dp"
                android:id="@+id/reason2"
                android:text="국제유가상승"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/textGray"
                android:text="국제유가의 상승으로 운송비가 증가할 것으로 예상됨"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/reason2"
                app:layout_constraintStart_toEndOf="@id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:text="주요 가격 변동 요인"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_manlabgreen_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">
            <ImageView
                android:src="@drawable/graph_1"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>